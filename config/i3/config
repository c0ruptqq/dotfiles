# Gaps
for_window [class=".*"] border pixel 0
gaps outer 10
gaps inner 10

#Brightness
bindsym XF86MonBrightnessUp exec sudo light -A 1 # increase screen brightness
bindsym XF86MonBrightnessDown exec sudo light -U 1 # decrease screen brightness

#Volume
bindsym XF86AudioRaiseVolume exec amixer -q set Master 4%+ unmute
bindsym XF86AudioLowerVolume exec amixer -q set Master 4%- unmute
bindsym XF86AudioMute exec amixer -q set Master toggle


